---
import { Image } from "astro:assets";
interface Props {
  text: string;
  price: string;
}

const { text, price} = Astro.props;
---

<li class="commission">
  <div class="commission-text">
    <h2>{text}</h2>
    <hr />
    <h3>{price}</h3>
  </div>
</li>
<style>
  h2 {
    margin: 0;
  }
  h3 {
    margin: 0;
    margin-bottom: 0.5em;
  }
  p {
    margin-top: 0.5rem;
    margin-bottom: 0;
  }
  img {
    background-color: rgb(var(--accent));
  }
  .commission {
    list-style: none;
  }
  .commission-text {
    text-align: center;
    opacity: 0.8;
  }
</style>
