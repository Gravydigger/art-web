---
import type { string } from "astro/zod";
import { Image } from "astro:assets";
interface Props {
  text: string;
  price: string;
  image: ImageMetadata;
}

const { text, price, image } = Astro.props;
---

<li class="commission">
  <div class="commission-text">
    <h2>{text}</h2>
    <hr />
    <h3>{price}</h3>
  </div>
  <div class="commission-image">
    <Image src={image} alt="" format="webp"/>
  </div>
</li>
<style>
  h2 {
    margin: 0;
  }
  h3 {
    margin: 0;
    margin-bottom: 0.5em;
  }
  p {
    margin-top: 0.5rem;
    margin-bottom: 0;
  }
  .commission {
    list-style: none;
  }
  .commission-image img {
    position: relative;
    object-fit: cover;
    max-width: 100%;
    max-height: 10em;
    border-radius: 1em;
    padding: 0;
  }
  .commission-text {
    text-align: center;
    opacity: 0.8;
  }
</style>
