---
import { Image } from "astro:assets";

import Layout from "../layouts/Layout.astro";
import Socials from "../components/Socials.astro";

import avatar from "../images/avatar.png";

import tumblr from "../images/social/tumblr.png";
import twitter from "../images/social/twitter.svg";
import youtube from "../images/social/youtube.png";
import patreon from "../images/social/patreon.svg";
import toyhouse from "../images/social/toyhouse.svg";
import instagram from "../images/social/instagram.svg";
---

<Layout title="Damita K.N">
  <main>
    <div class="intro">
      <Image src={avatar} alt="temp" height="256" format="webp" />
      <div id="avatar-text">
        <h1>Damita</h1>
        <ul>
          <li>She/They</li>
          <li>26 July</li>
          <li>Illustrator &amp; Animator</li>
        </ul>
      </div>
    </div>
    <ul role="list" class="link-card-grid">
      <a href="/gallery">
        <li class="link-card">
          <div>
            <h1>Commission Info</h1>
          </div>
        </li>
      </a>
      <li class="link-card-no-animation">
        <div id="socials">
          <Socials
            icon={youtube}
            alt="Youtube Logo"
            href="https://www.youtube.com/c/DamitaKN"
          />
          <Socials
            icon={patreon}
            alt="Patreon Logo"
            href="https://www.patreon.com/damitakn"
          />
          <Socials
            icon={instagram}
            alt="Instagram Logo"
            href="https://www.instagram.com/damita_k.n/"
          />
          <Socials
            icon={tumblr}
            alt="Tumblr Logo"
            href="https://damita-kn.tumblr.com/"
          />
          <Socials
            icon={toyhouse}
            alt="Toyhouse Logo"
            href="https://toyhou.se/Damita_KN/characters"
          />
          <Socials
            icon={twitter}
            alt="Twitter Logo"
            href="https://twitter.com/Damita_kn"
          />
        </div>
      </li>
    </ul>
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 0;
    width: 800px;
    max-width: calc(100% - 2rem);
    color: white;
    font-size: 20px;
    line-height: 1.6;
  }
  h1 {
    font-size: 4rem;
    font-weight: 700;
    line-height: 1;
    text-align: center;
    margin-bottom: 1em;
  }
  a {
    text-decoration: none;
    color: white;
  }
  img {
    border-radius: 100%;
    padding: 1em;
  }
  p {
    margin-top: 0.5rem;
    margin-bottom: 0;
  }
  div > h1 {
    margin: 0;
  }
  .intro {
    margin-bottom: 2rem;
    border: 1px solid rgba(var(--accent-light), 25%);
    background: linear-gradient(
      rgba(var(--accent-dark), 66%),
      rgba(var(--accent-dark), 33%)
    );
    padding: 1.5rem;
    border-radius: 8px;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: center;
  }
  .link-card-grid {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    padding: 0;
  }
  .link-card,
  .link-card-no-animation {
    list-style: none;
    display: flex;
    padding: 1px;
    background-color: #23262d;
    background-image: none;
    background-size: 400%;
    border-radius: 7px;
    background-position: 100%;
    transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
  }
  .link-card > div,
  .link-card-no-animation > div {
    width: 100%;
    text-decoration: none;
    line-height: 1.4;
    padding: calc(1.5rem - 1px);
    border-radius: 8px;
    color: white;
    background-color: #23262d;
    opacity: 0.8;
  }
  #avatar-text > h1 {
    margin: 0;
  }
  #socials {
    display: flex;
    justify-content: space-evenly;
    flex-wrap: wrap;
  }
  @media screen and (max-width: 640px) {
    a > h1 {
      font-size: 3rem;
    }
  }
  .link-card:is(:hover, :focus-within) {
    background-position: 0;
    background-image: var(--accent-gradient);
  }
</style>
