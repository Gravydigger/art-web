---
import { Image } from "astro:assets";

import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Modal from "../components/Modal.astro";

const images = await Astro.glob("/src/images/gallery/*");
---

<Layout title="Damita K.N - Gallery" header="Damita K.N">
  <main>
    <Navbar />
    <div class="link-card-grid">
      <div class="link-card">
        <div>
          <h2 id="gallery-header">Gallery</h2>
          <ul class="gallery-image">
            {
              images.map((image) => (
                <li>
                  <Image
                    src={image.default}
                    alt="Gallery Image"
                    format="webp"
                    tabindex="0"
                  />
                </li>
              ))
            }
          </ul>
        </div>
      </div>
    </div>
    <Modal />
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 0;
    width: 800px;
    max-width: calc(100% - 2rem);
    color: white;
    font-size: 20px;
    line-height: 1.6;
  }
  h2 {
    font-size: 3rem;
    font-weight: 700;
    line-height: 1;
    text-align: center;
    margin-bottom: 1em;
    opacity: 0.8;
  }
  a {
    text-decoration: none;
    color: white;
  }
  p {
    margin-top: 0.5rem;
    margin-bottom: 0;
  }

  #gallery-header {
    margin: 0;
    padding-bottom: 0.5em;
  }
  .gallery-image {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    padding: 0;
  }
  .gallery-image > li {
    list-style: none;
    position: relative;
    cursor: pointer;
    flex: 1 200px;
    height: 100%;
  }
  .gallery-image li img {
    object-fit: cover;
    max-width: 100%;
    height: 10em;
    vertical-align: middle;
    border-radius: 5px;
    padding: 0;
  }
  .link-card-grid {
    display: flex;
    flex-direction: column;
    padding: 0;
    margin: 1rem 0;
  }
  .link-card {
    display: flex;
    flex-direction: column;
    padding: 1px;
    background-color: #23262d;
    background-image: none;
    background-size: 400%;
    border-radius: 7px;
    background-position: 100%;
    box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
  }
  .link-card > div {
    margin: 0;
    text-decoration: none;
    line-height: 1.4;
    padding: calc(1.5rem - 1px);
    border-radius: 8px;
    color: white;
    background-color: #23262d;
  }
</style>
