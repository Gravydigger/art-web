---
import { Image } from "astro:assets";

import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import CommsImage from "../components/Comms.astro";
import Comms from "../components/Comms-noImage.astro";
import Modal from "../components/Modal.astro";

import headshot1 from "../images/gallery/Ninten_Draw_3rd_place.png";
import headshot2 from "../images/gallery/iota.png";

import FullSketch from "../images/comms/fullSketch.png";
import Full from "../images/comms/full.png";

---

<Layout title="Damita K.N - Commissions" header="Damita K.N">
  <main>
    <Navbar />
    <div class="link-card-grid">
      <div class="link-card">
        <div>
          <h1>Art: Sketch</h1>
          <hr />
          <ul class="images">
            <CommsImage
              text="Bust"
              price="$10"
              alt="Example of what a bust sketch would look like"
              image={headshot1}
            />
            <CommsImage
              text="Half-body"
              price="$15"
              alt="Example of what a half-body sketch would look like"
              image={headshot2}
            />
            <CommsImage
              text="Full-body"
              price="$20"
              alt="Example of what a full-body sketch would look like"
              image={FullSketch}
            />
          </ul>
          <ul>
            <li>Additional Character +$5</li>
            <li>Flat color / Transparent background is free</li>
          </ul>
        </div>
      </div>
      <div class="link-card">
        <div>
          <h1>Art: Colored</h1>
          <hr />
          <ul class="images">
            <CommsImage
              text="Bust"
              price="$20"
              alt="Example of what a colored bust drawing would look like"
              image={headshot1}
            />
            <CommsImage
              text="Half-body"
              price="$30"
              alt="Example of what a colored half-body drawing would look like"
              image={headshot1}
            />
            <CommsImage
              text="Full-body"
              price="$40"
              alt="Example of what a colored full-body drawing would look like"
              image={Full}
            />
          </ul>
          <ul>
            <li>Additional Character +$5</li>
            <li>Flat color / Transparent background is free</li>
            <li>Complex background: +$5 to $100 depending on the complexity</li>
          </ul>
        </div>
      </div>
      <div class="link-card">
        <div>
          <h1>Animation: Tweening</h1>
          <hr />
          <ul class="images">
            <Comms text="Bust" price="$25" />
            <Comms text="Half" price="$50" />
            <Comms text="Full" price="$75" />
          </ul>
          <h2 class="youtube-examples">
            <a href="https://www.youtube.com/c/DamitaKN"
              >Examples found on my YouTube Channel!</a>
          </h2>
          <ul>
            <li>Additional Character +$20</li>
            <li>Flat color / Transparent background is free</li>
            <li>Complex background: +$5 to $100 depending on the complexity</li>
            <li>For animation memes: cost is dependent on complexity</li>
          </ul>
        </div>
      </div>
      <div class="link-card">
        <div>
          <h1>Animation: Frame-by-Frame</h1>
          <hr />
          <ul class="images">
            <Comms text="Bust" price="$45" />
            <Comms text="Half" price="$70" />
            <Comms text="Full" price="$95" />
          </ul>
          <h2 class="youtube-examples">
            <a href="https://www.youtube.com/c/DamitaKN"
              >Examples found on my YouTube Channel!</a>
          </h2>
          <ul>
            <li>Additional Character +$30</li>
            <li>Flat color / Transparent background is free</li>
            <li>Complex background: +$5 to $100 depending on the complexity</li>
            <li>For animation memes: cost is dependent on complexity</li>
          </ul>
        </div>
      </div>
    </div>
    <Modal />
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 0;
    width: 800px;
    max-width: calc(100% - 2rem);
    color: white;
    font-size: 20px;
    line-height: 1.6;
  }
  h1 {
    font-size: 3em;
    font-weight: 700;
    line-height: 1;
    text-align: center;
    margin: 0 0 0.5em 0;
    opacity: 0.8;
  }
  a {
    text-decoration: none;
    color: white;
  }
  hr {
    opacity: 0.8;
  }
  p {
    margin-top: 0.5rem;
    margin-bottom: 0;
  }
  ul {
    opacity: 0.8;
  }
  .images {
    display: flex;
    padding: 0;
    gap: 1em;
    opacity: 1;
    justify-content: space-evenly;
    align-items: center;
  }
  .link-card-grid {
    display: flex;
    flex-direction: column;
    padding: 0;
    margin: 1rem 0;
    gap: 1em;
  }
  .link-card {
    display: flex;
    flex-direction: column;
    padding: 1px;
    background-color: #23262d;
    background-image: none;
    background-size: 400%;
    border-radius: 7px;
    background-position: 100%;
    box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
  }
  .link-card > div {
    margin: 0;
    text-decoration: none;
    line-height: 1.4;
    padding: calc(1.5rem - 1px);
    border-radius: 8px;
    color: white;
    background-color: #23262d;
  }
  .youtube-examples {
    text-align: center;
  }
  .youtube-examples > a {
    text-decoration: underline;
  }
  .youtube-examples > a:is(:hover, :focus-within) {
    color: rgba(var(--accent), 1);
  }
  @media screen and (max-width: 640px) {
    .images {
      flex-direction: column;
    }
  }
</style>
